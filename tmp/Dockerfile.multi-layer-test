FROM --platform=linux/arm64 ubuntu:22.04 AS base

# Install build tools once
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    curl \
    wget \
    pkg-config \
    autoconf \
    automake \
    libtool \
    nasm \
    yasm \
    python3 \
    python3-pip \
    meson \
    ninja-build \
    && rm -rf /var/lib/apt/lists/*

ENV FFMPEG_BUILD_ROOT="/opt/ffmpeg"
ENV PKG_CONFIG_PATH="$FFMPEG_BUILD_ROOT/lib/pkgconfig"
ENV PATH="$FFMPEG_BUILD_ROOT/bin:$PATH"
RUN mkdir -p "$FFMPEG_BUILD_ROOT"

# Layer 1: x264 (H.264 encoder)
FROM base AS x264
RUN git clone --depth 1 https://code.videolan.org/videolan/x264.git /tmp/x264 \
    && cd /tmp/x264 \
    && ./configure --prefix="$FFMPEG_BUILD_ROOT" --disable-shared --enable-static --enable-pic \
    && make -j$(nproc) \
    && make install \
    && echo "✅ x264 completed"

# Layer 2: libmp3lame (MP3 encoder)
FROM x264 AS lame
RUN curl -L "https://downloads.sourceforge.net/project/lame/lame/3.100/lame-3.100.tar.gz" -o lame.tar.gz \
    && tar -xzf lame.tar.gz && rm lame.tar.gz \
    && cd lame-3.100 \
    && ./configure --prefix="$FFMPEG_BUILD_ROOT" --disable-shared --enable-static \
    && make -j$(nproc) \
    && make install \
    && echo "✅ lame completed"

# Layer 3: opus (Opus encoder)
FROM lame AS opus
RUN git clone --depth 1 https://github.com/xiph/opus.git /tmp/opus \
    && cd /tmp/opus \
    && ./autogen.sh \
    && ./configure --prefix="$FFMPEG_BUILD_ROOT" --disable-shared --enable-static \
    && make -j$(nproc) \
    && make install \
    && echo "✅ opus completed"

# Test FFmpeg build with these 3 libraries
FROM opus AS ffmpeg-test
COPY scripts/build-ffmpeg.sh /scripts/
RUN chmod +x /scripts/build-ffmpeg.sh

# Simplified FFmpeg build for testing
RUN git clone --depth 1 https://git.ffmpeg.org/ffmpeg.git /tmp/ffmpeg \
    && cd /tmp/ffmpeg \
    && ./configure \
        --prefix="$FFMPEG_BUILD_ROOT" \
        --pkg-config-flags="--static" \
        --extra-cflags="-I$FFMPEG_BUILD_ROOT/include -w" \
        --extra-ldflags="-L$FFMPEG_BUILD_ROOT/lib" \
        --extra-libs="-lpthread -lm" \
        --ld="g++" \
        --bindir="$FFMPEG_BUILD_ROOT/bin" \
        --enable-static \
        --disable-shared \
        --disable-debug \
        --disable-ffplay \
        --enable-gpl \
        --enable-libx264 \
        --enable-libmp3lame \
        --enable-libopus \
        --enable-pic \
    && make -j$(nproc) \
    && make install \
    && echo "✅ FFmpeg test build completed"

# Final test stage
FROM ubuntu:22.04 AS final
RUN apt-get update && apt-get install -y \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

COPY --from=ffmpeg-test /opt/ffmpeg/bin/* /usr/local/bin/

# Verify installation
RUN ffmpeg -version && ffprobe -version

WORKDIR /workspace
ENTRYPOINT ["ffmpeg"] 